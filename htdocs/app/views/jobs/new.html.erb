<h1>New job</h1>

<% form_for(@job, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nodes %><br />
    <%= f.text_field :nodes %>
  </p>
  <p>
    <%= f.label :pvalue %><br />
    <%= f.text_field :pvalue %>
  </p>
  <p>
    <%= f.label :show_wiring_diagram %><br />
    <%= f.check_box :show_wiring_diagram %>
  </p>
  <p>
    <%= f.label :wiring_diagram_format %><br />
    <%= f.text_field :wiring_diagram_format %>
  </p>
  <p>
    <%= f.label :show_state_space %><br />
    <%= f.check_box :show_state_space %>
  </p>
  <p>
    <%= f.label :state_space_format %><br />
    <%= f.text_field :state_space_format %>
  </p>
  <p>
    <%= f.label :show_discretized %><br />
    <%= f.check_box :show_discretized %>
  </p>
  <p>
    <%= f.label :show_functions %><br />
    <%= f.check_box :show_functions %>
  </p>
  <p>
    <%= f.label :input_data %><br />
    <%= f.text_area :input_data %>
  </p>
  <p>
    <%= f.label :input_file %><br />
    <%= f.file_field :input_file %>
  </p>
  <p>
    <%= f.label :show_probabilities_wiring_diagram %><br />
    <%= f.check_box :show_probabilities_wiring_diagram %>
  </p>
  <p>
    <%= f.label :show_probabilities_state_space %><br />
    <%= f.check_box :show_probabilities_state_space %>
  </p>
  <p>
    <%= f.label :make_deterministic_model %><br />
    <%= f.check_box :make_deterministic_model %>
  </p>
  <p>
    <%= f.label :update_type %><br />
    <%= f.text_field :update_type %>
  </p>
  <p>
    <%= f.label :update_schedule %><br />
    <%= f.text_field :update_schedule %>
  </p>
  <p>
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </p>
  <p>
    <%= f.label :deleted %><br />
    <%= f.check_box :deleted %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :login %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', jobs_path %>