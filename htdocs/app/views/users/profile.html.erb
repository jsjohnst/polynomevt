<p>
  <b>Login:</b>
  <%=h @user.login %>
</p>

<p>
  <b>Password:</b>
  <%=h @user.password %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>First name:</b>
  <%=h @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%=h @user.last_name %>
</p>

<p>
  <b>Organization:</b>
  <%=h @user.organization %>
</p>

<p>
  <b>Jobs:</b><br/>
  <% @user.job.each do |j| %>
  	<%= link_to j.created_at, j %><br/>
  <% end %>
</p>

